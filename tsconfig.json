{
    "compileOnSave": true,
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "target": "ES2017",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "outDir": "./public/dist",
        "baseUrl": ".",
        "watch": true,
        "allowJs": true,
        "paths": {
            "*": ["node_modules/*", "src/types/*"]
        },
        "lib": ["ES6", "DOM"]
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}